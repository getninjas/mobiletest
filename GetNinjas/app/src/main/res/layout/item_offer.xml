<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        card_view:cardCornerRadius="4dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:id="@+id/container_offer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Buffet Completo - Titulo 1"
                android:id="@+id/tv_title"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/iv_read"
                android:layout_alignParentLeft="false" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/iv_read"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/blue"
                android:layout_alignBottom="@+id/tv_title"
                android:visibility="visible"
                android:layout_marginRight="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Usuãrio Anônimo"
                android:id="@+id/tv_user"
                android:layout_below="@+id/tv_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:layout_toLeftOf="@+id/tv_date"
                android:layout_toStartOf="@+id/tv_date"
                android:layout_marginRight="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="4 de mar 2009"
                android:id="@+id/tv_date"
                android:textSize="16sp"
                android:layout_alignBaseline="@+id/tv_user"
                android:layout_alignBottom="@+id/tv_user"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Vila Leopoldina, São Paulo - SP"
                android:id="@+id/tv_address"
                android:textSize="16sp"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/tv_user"
                android:layout_marginTop="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/tv_date"
                android:layout_alignEnd="@+id/tv_date" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>